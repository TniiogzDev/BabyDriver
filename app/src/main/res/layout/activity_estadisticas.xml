<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Estadisticas">

    <TextView
        android:id="@+id/tvTituloEstadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estadísticas del Sensor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvNombreusuarioEstadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTituloEstadisticas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Usuario: nombre"/>

    <LinearLayout
        android:id="@+id/llStatsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNombreusuarioEstadisticas"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/tvDistanciaActualEstadisticas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distancia Actual: -- cm" 
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvTotalAlertas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total de Alertas: --" 
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvPeligroCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="- Peligro: --"
            android:textColor="@android:color/holo_red_dark" 
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvPrecaucionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Precaución: --"
            android:textColor="@android:color/holo_orange_light" 
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvSeguraCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Zona Segura: --"
            android:textColor="@android:color/holo_green_dark" 
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnVolverEstadisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>