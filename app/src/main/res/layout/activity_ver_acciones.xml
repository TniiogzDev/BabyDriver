<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".VerAcciones">

    <TextView
        android:id="@+id/tvTituloVerAcciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de Acciones"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvNombreusuarioVeracciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTituloVerAcciones"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Usuario: nombre"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAcciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvNombreusuarioVeracciones"
        android:layout_above="@+id/btnVolverVeracciones"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnVolverVeracciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>